{
    "include" : [ "./Source/**/*.ts" ],

    "exclude" : [
        "node_modules" ,
        "lib"
    ],


    "compilerOptions" : {

        "baseUrl" : "Source" ,
        "outDir" : "Export" ,

        "moduleResolution" : "node" ,
		"module" : "ESNext" ,
        "target" : "ESNext" ,

        "forceConsistentCasingInFileNames" : true ,
        "esModuleInterop" : true ,
        "isolatedModules" : true ,
        "declarationMap" : true ,
        "skipLibCheck" : true ,
        "declaration" : true ,
        "sourceMap" : true ,
        "strict" : true
    }
}
